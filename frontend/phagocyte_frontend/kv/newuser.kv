#:kivy 1.8.0

RootWidget:
    # import container, username and password
    container: container
    username: username
    password: password
    creationButton: creationButton

    GridLayout:
        id: container
        cols: 2
        #padding: 10
        #spacing: 5

        Label:
            text: "User name:"

        TextInput:
            id: username
            multiline: False

        Label:
            text: "Password:"

        TextInput:
            id: password
            password: True
            multiline: False

        BoxLayout:
            padding: 30
            spacing: 5
            orientation: "horizontal"

            Button:
                text: "Cancel"
                on_release: root.next_screen("root")

        BoxLayout:
            padding: 30
            spacing: 5
            orientation: "horizontal"

            Button:
                id: creationButton
                text: "Register"
                on_release: root.user_creation()
