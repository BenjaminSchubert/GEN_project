#:kivy 1.9

<Player>:
    size: 100, 100
    canvas:
        Color:
            rgb: 0, 0, 0
        Ellipse:
            pos: self.pos
            size: self.size


<Food>:
    size: 35, 35
    canvas:
        Color:
            rgb: 0, 1, 0
        Ellipse:
            pos: self.pos
            size: self.size


<World>:
    size: 8000, 8000
    pos: (root.parent.size[0] - root.size[0]) / 2, (root.parent.size[1] -root.size[1]) / 2
    canvas.before:
        Color:
            rgb: 9/255, 56/255, 71/255
        Rectangle:
            pos: self.pos
            size: self.size

    main_player: main_player

    MainPlayer:
        id: main_player


<GameInstance>:
    id: game_object

    world: world
    camera: camera
    map: map
    root: root

    size: root.size

    ScrollView:
        id: camera
        size_hint: None, None
        size: root.size
        do_scroll: False, False
        Scatter:
            id: map
            size: world.size[0] + root.size[0], world.size[1] + root.size[1]
            size_hint: None, None
            do_scale: False
            do_translation: False, False
            do_rotation: False
            scale: 1

            canvas.before:
                Color:
                    rgb: 34/255, 112/255, 138/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            World:
                id: world


<DeathPopup>:
    title: "DEATH"
    size_hint: (None, None)
    size: (350, 200)
    auto_dismiss: False

    restart_button: restart_button
    main_menu_button: main_menu_button

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "You just died, sorry !"

        Button:
            id: main_menu_button

            text: "Main Menu"
            size_hint: (0.4, 0.4)
            pos_hint: {"x": 0}

        Button:
            id: restart_button

            text: "Restart"
            size_hint: (0.4, 0.4)
            pos_hint: {"x": 0.6}

