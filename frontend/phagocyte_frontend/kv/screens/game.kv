#:kivy 1.9.1

<Player>:
    size: 1, 1
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size


<Food>:
    size: 35, 35

    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size


<Bonus>:
    size: 30, 30
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size

<Shield>:
    size: self.player.width * 1.3, self.player.height * 1.3
    center: self.player.center

    canvas:
        Color:
            rgba: self.player.color[0], self.player.color[1], self.player.color[2], self.player.color[3] * 0.6
        Ellipse:
            pos: self.pos
            size: self.size


<Hook>:
    canvas:
        Line:
            points: self.player.center_x, self.player.center_y, self.end_x, self.end_y
            width: 10
            cap: 'round'

<Bullet>:
    size: 20, 20
    canvas:
        Color:
            rgba: self.color
        Ellipse:
            pos: self.pos
            size: self.size


<World>:
    size: 8000, 8000
    pos: (root.parent.size[0] - root.size[0]) / 2, (root.parent.size[1] -root.size[1]) / 2
    canvas.before:
        Color:
            rgb: 9/255, 56/255, 71/255
        Rectangle:
            pos: self.pos
            size: self.size

    main_player: main_player

    MainPlayer:
        id: main_player


<GameInstance>:
    id: game_object

    world: world
    camera: camera
    map: map
    root: root
    health_bar: health_bar

    size: root.size

    ScrollView:
        id: camera
        size_hint: None, None
        size: root.size
        do_scroll: False, False
        Scatter:
            id: map
            size: world.size[0] + root.size[0], world.size[1] + root.size[1]
            size_hint: None, None
            do_scale: False
            do_translation: False, False
            do_rotation: False
            scale: root.SCALE_RATIO / (world.main_player.width + root.scale_ratio_util) ** .5

            canvas.before:
                Color:
                    rgb: 34/255, 112/255, 138/255
                Rectangle:
                    pos: self.pos
                    size: self.size
            World:
                id: world

    ProgressBar:
        id: health_bar
        value: (self.parent.world.main_player.size[0] - self.parent.world.main_player.initial_size) / (self.parent.MAX_SIZE - self.parent.world.main_player.initial_size) * 100
        pos: self.parent.width - game_object.width/4 - 50, self.parent.height - 80
        width: game_object.width/4


<DeathPopup>:
    title: "DEATH"
    size_hint: (None, None)
    size: (350, 200)
    auto_dismiss: False

    restart_button: restart_button
    main_menu_button: main_menu_button

    BoxLayout:
        orientation: "vertical"

        Label:
            text: "You just died, sorry !"

        Button:
            id: main_menu_button

            text: "Main Menu"
            size_hint: (0.4, 0.4)
            pos_hint: {"x": 0}

        Button:
            id: restart_button

            text: "Restart"
            size_hint: (0.4, 0.4)
            pos_hint: {"x": 0.6}


<WinPopup>:
    title: "Game ENDS"
    size_hint: (None, None)
    size: (350, 200)
    auto_dismiss: False
    text: ""

    main_menu_button: main_menu_button

    BoxLayout:
        orientation: "vertical"

        Label:
            text: root.text

        Button:
            id: main_menu_button

            text: "Main Menu"
            size_hint: (0.4, 0.4)
            pos_hint: {"x": 0.6}
