#:kivy 1.9.1

<RegisterScreen>:
    # import username, password and creationButton
    username: username
    password: password
    creationButton: creationButton

    GridLayout:
        cols: 2
        padding: 20
        spacing: 60

        Label:
            text: "User name:"

        TextInput:
            id: username
            multiline: False

        Label:
            text: "Password:"

        TextInput:
            id: password
            password: True
            multiline: False

        Button:
            text: "Cancel"
            size_hint: 1, 0.3
            on_release: root.manager.main_screen()

        Button:
            id: creationButton
            text: "Register"
            size_hint: 1, 0.3
            on_release: root.user_creation()
