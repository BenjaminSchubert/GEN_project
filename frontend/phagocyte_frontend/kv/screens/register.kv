#:kivy 1.9.1

<RegisterScreen>:
    # import username, password and creationButton
    username: username
    password: password
    creationButton: creationButton

    GridLayout:
        cols: 2
        padding: 20
        spacing: 60

        Label:
            text: "User name:"

        TextInput:
            id: username
            multiline: False

        Label:
            text: "Password:"

        TextInput:
            id: password
            password: True
            multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                text: "Cancel"
                on_release: root.manager.main_screen()

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                id: creationButton
                text: "Register"
                on_release: root.user_creation()
