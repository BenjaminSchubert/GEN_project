#:kivy 1.9.1

<LobbyScreen>:
    BoxLayout:
        padding: 20
        spacing: 60
        orientation: "horizontal"

        BoxLayout:
            spacing: 20
            orientation: "vertical"

            Label:
                size: self.texture_size
                markup: True
                text: "[b]Running games[/b]"

            ListView:
                adapter: root.game_list

            Button:
                text:"Play"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                disabled: not len(root.game_list.data)
                on_release: root.play()

        BoxLayout:
            spacing: 20
            orientation: "vertical"
            size_hint: 0.5, 0.6
            pos_hint: {"y": 0.2}


            Button:
                text: "Login"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                on_release: root.user_login_process()

            Button:
                text: "Register"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                on_release: root.user_creation_process()

            Label:

            Button:
                text: "Create a new game"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                on_release: root.game_creation_process()

            Button:
                text: "Parameters"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                on_release: root.user_parameters_process()

            Button:
                text: "Statistics"
                text_size: self.width, None
                halign: "center"
                valign: "middle"
                on_release: root.user_statistics_process()
