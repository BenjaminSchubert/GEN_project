#:kivy 1.9.1

<CreateGameScreen>:
    GridLayout:
        cols: 2
        padding: 20
        spacing: 30

        row_default_height: 35
        row_force_default: True

        Label:
            text: "Game name:"

        TextInput:
            multiline: False

        Label:
            text: "Map width:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Label:
            text: "Map height:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Label:
            text: "Min phagocyte radius:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Label:
            text: "Max phagocyte speed:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Label:
            text: "Eat ratio:"

        TextInput:
            multiline: False
            input_filter: 'float'

        Label:
            text: "Food production rate:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Label:
            text: "Max hit count:"

        TextInput:
            multiline: False
            input_filter: 'int'

        Button:
            text: "Cancel"
            size_hint: 1, 0.3
            on_release: root.manager.main_screen()

        Button:
            text: "Validate"
            size_hint: 1, 0.3
            on_release: root.game_creation()
