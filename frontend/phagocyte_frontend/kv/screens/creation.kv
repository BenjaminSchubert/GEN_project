#:kivy 1.9.1

<CreateGameScreen>:

    GridLayout:
        cols: 2
        padding: 20
        spacing: 60

        Label:
            text: "Map name:"

        TextInput:
            multiline: False

        Label:
            text: "Map width:"

        TextInput:
            multiline: False

        Label:
            text: "Map height:"

        TextInput:
            multiline: False

        Button:
            text: "Cancel"
            size_hint: 1, 0.3
            on_release: root.manager.main_screen()

        Button:
            text: "Validate"
            size_hint: 1, 0.3
            #on_release: root.validate_parameters()
