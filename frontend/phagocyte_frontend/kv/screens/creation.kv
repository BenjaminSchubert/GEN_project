#:kivy 1.9.1

<CreateGameScreen>:

    GridLayout:
        cols: 2
        padding: 20
        spacing: 60

        Label:
            text: "Map name:"

        TextInput:
            multiline: False

        Label:
            text: "Map width:"

        TextInput:
            multiline: False

        Label:
            text: "Map height:"

        TextInput:
            multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                text: "Cancel"
                on_release: root.manager.main_screen()

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                text: "Validate"
                #on_release: root.validate_parameters()
