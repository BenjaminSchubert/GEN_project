#:kivy 1.9.1

<ParametersScreen>:
    #import
    newUserName: newUserName
    newBallColor: newBallColor
    oldPassword: oldPassword
    newPassword: newPassword
    newPasswordConfirmation: newPasswordConfirmation
    buttonSend: buttonSend

    GridLayout:
        cols: 2
        spacing: 5

        Label:
            text: "New user name:"

        TextInput:
            id: newUserName
            multiline: False

        Label:
            text: "New ball color:"

        ColorPicker:
            id: newBallColor
            size_hint: 1, 3

        Label:
            text: "Old password:"

        TextInput:
            id: oldPassword
            password: True
            multiline: False

        Label:
            text: "New password:"

        TextInput:
            id: newPassword
            password: True
            multiline: False

        Label:
            text: "Confirm new password:"

        TextInput:
            id: newPasswordConfirmation
            password: True
            multiline: False

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                text: "Cancel"
                on_release: root.manager.main_screen()

        BoxLayout:
            id: buttonSend
            orientation: "horizontal"
            size_hint: 1, 0.3

            Button:
                text: "Test param"
                on_release: root.test_send_param()

            Button:
                text: "Validate"
                on_release: root.validate_parameters()
