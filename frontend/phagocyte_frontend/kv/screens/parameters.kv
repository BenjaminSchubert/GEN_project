#:kivy 1.8.0

<ParametersScreen>:
    # import container, username and password
    container: container

    GridLayout:
        id: container
        cols: 2
        #padding: 10
        #spacing: 5

        Label:
            text: "New user name:"

        TextInput:
            multiline: False

        Label:
            text: "New ball color:"

        ColorPicker:
            size_hint: 1, 3

        Label:
            text: "Old password:"

        TextInput:
            password: True
            multiline: False

        Label:
            text: "New password:"

        TextInput:
            password: True
            multiline: False

        Label:
            text: "Confirm new password:"

        TextInput:
            password: True
            multiline: False

        BoxLayout:
            padding: 30
            spacing: 5
            orientation: "horizontal"

            Button:
                text: "Cancel"
                on_release: root.manager.main_screen()

        BoxLayout:
            padding: 30
            spacing: 5
            orientation: "horizontal"

            Button:
                id: loginButton
                text: "Validate"
                on_release: root.validate_parameters()
